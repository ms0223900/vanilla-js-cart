{
  "name": "vanilla-js-cart",
  "version": "1.0.0",
  "description": "A vanilla JavaScript shopping cart application with testing",
  "main": "src/cart-before-refactored.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.1.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^23.0.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/src/setupTests.js"],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/setupTests.js"
    ]
  },
  "keywords": ["shopping-cart", "vanilla-javascript", "testing"],
  "author": "",
  "license": "MIT"
}
